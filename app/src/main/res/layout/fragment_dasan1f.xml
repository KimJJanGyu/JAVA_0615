<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dasan.Dasan1fFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start_dasan_1f_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="40dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start_dasan_1f_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="290dp" />



        <ImageView
            android:id="@+id/dasanimage_1f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dasanimage_1f"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/todo"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/overlay_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_maker"
            app:layout_constraintTop_toTopOf="@id/dasanimage_1f"
            app:layout_constraintStart_toStartOf="@id/dasanimage_1f"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/todo" />


        <TextView
            android:id="@+id/dasan1f_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_dasan1f_1"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/dasanimage_1f"
            app:layout_constraintStart_toStartOf="@id/guideline_start_dasan_1f_1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="569dp"
            android:clickable="true"
            android:focusable="true" />





    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>